#!/usr/bin/env php
<?php

require_once dirname(__FILE__) . "/../include/init.php";

if (2 != $argc) {
	err("Usage: {$argv[0]} <post>\n");
	exit(1);
}
if (!file_exists($argv[1])) {
	err("[edit] can't find a post at {$argv[1]}\n");
	exit(1);
}
$base = realpath(dirname(__FILE__) . "/../posts");
if ($base != substr(realpath($argv[1]), 0, strlen($base))) {
	err("[edit] can only edit from the posts/ directory\n");
	exit(1);
}

# Find the proper editor
if ($editor = $EDITOR) {}
else if ($editor = getenv('EDITOR')) {}
else { $editor = "vi"; }
$command = rtrim(`which $editor`);
if (!$command) {
	err("[edit] editor $editor not found\n");
	exit(1);
}

pcntl_exec($command, array($argv[1]), $_ENV);
